<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Step_one">


    <LinearLayout
        android:background="#fff"
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/smce"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:contentDescription="@string/smce" />

        <EditText
            android:drawableLeft="@drawable/ic_assignment_ind_black_24dp"
            android:background="@drawable/background"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColorHint="#277C2A"
            android:id="@+id/regno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:drawablePadding="10dp"
            android:hint="@string/register_number"
            android:inputType="number"
            android:paddingLeft="25dp"
            android:textSize="20sp"
            android:drawableStart="@drawable/ic_assignment_ind_black_24dp"
            android:paddingStart="25dp"
            android:autofillHints=""
            tools:ignore="RtlSymmetry" />


        <Button

            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:background="@drawable/background"
            android:layout_height="wrap_content"
            android:text="@string/check"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#277C2A"
            android:id="@+id/check"
            android:textSize="20sp"/>

        <EditText
            android:drawableLeft="@drawable/ic_message_black_24dp"
            android:background="@drawable/background"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColorHint="#277C2A"
            android:id="@+id/otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:hint="@string/enter_the_otp"
            android:inputType="text"
            android:paddingLeft="25dp"
            android:drawablePadding="10dp"
            android:textSize="20sp"
            android:autofillHints="otp"
            android:drawableStart="@drawable/ic_message_black_24dp"
            android:paddingStart="25dp"
            tools:ignore="RtlSymmetry" />

        <Button
            android:id="@+id/verify"
            android:textColor="#000"
            android:background="@drawable/background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="@string/verify"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:text="@string/already_have_an_account_login"
            android:layout_marginBottom="20dp"
            android:onClick="already"/>
    </LinearLayout>

</ScrollView>